{
  "name": "@ckittipob/cpx/theme",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "CPX Tailwind v4 theme: default design tokens exported as @theme CSS",
  "files": [
    "cpx-theme.css",
    "dark.css",
    "light.css"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": "./cpx-theme.css"
  },
  "scripts": {
    "build": "node ./scripts/build-theme.mjs"
  },
  "dependencies": {
    "@ckittipob/cpx/design-tokens": "workspace:*"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "theme",
    "design tokens",
    "oklch"
  ],
  "license": "MIT"
}
